<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_function_name"
        tools:text="温度"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mg_15"
        android:layout_width="match_parent"
        android:textColor="@color/text_color"
        android:textSize="@dimen/ts_16" />

    <TextView
        android:id="@+id/tv_function_selected"
        tools:text="温度"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/mg_15"
        android:layout_width="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/ts_16" />
    <ImageView
        android:id="@+id/condition_list_item_imgArrow"
        android:background="@drawable/arrow_more"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/mg_15"
        android:layout_width="wrap_content" />
</LinearLayout>