<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/app_bg_color"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/action_bar_layout"
        layout="@layout/toolbar_top_view" />
    <ListView
        style="@style/TY_List_Normal"
        android:id="@+id/timer_listview"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <LinearLayout
        android:id="@+id/timer_list_emptyLayout"
        android:orientation="vertical"
        android:layout_weight="1.0"
        android:gravity="center|center_vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ty_list_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/timer_list_empty"
            android:textColor="@color/gray_30"
            android:textSize="@dimen/ts_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/timer_btnAdd"
        style="@style/Button.Normal"
        android:background="@drawable/bg_button_selector"
        android:text="@string/add_timer"
        android:textColor="@color/text_color"
        android:textSize="@dimen/ts_16"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>