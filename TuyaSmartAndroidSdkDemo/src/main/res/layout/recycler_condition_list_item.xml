<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_condition_name"
        tools:text="温度"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mg_15"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="@dimen/ts_16" />

    <ImageView
        android:id="@+id/condition_list_item_imgArrow"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/arrow_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/mg_15"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/tv_condition_value"
        tools:text="小于0度"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/mg_15"
        app:layout_constraintRight_toLeftOf="@id/condition_list_item_imgArrow"
        android:layout_width="wrap_content"
        android:textColor="@color/text_hint_color"
        android:textSize="@dimen/ts_14" />
</android.support.constraint.ConstraintLayout>