<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_seekbar_txtValue"
        tools:text="100%"
        android:text="100%"
        android:textColor="@color/text_color"
        android:textSize="@dimen/ts_32"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <SeekBar
        android:id="@+id/dialog_seekbar_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="10dp"
        android:progressDrawable="@drawable/progress_drawable"
        android:thumb="@drawable/knob"
        android:splitTrack="false"
        android:max="255" />
    <TextView
        android:id="@+id/dialog_seekbar_btnOk"
        tools:text="@string/seekbar_pick_btnOK"
        android:text="@string/seekbar_pick_btnOK"
        android:textColor="@color/gray"
        android:textSize="@dimen/ts_18"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>